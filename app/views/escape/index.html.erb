<%= button_to 'Read Configuration & System Status & Balance', {controller: 'escape', action: 'read'}, {method: :get }%>
<% if @api_key %>
    <h2>API KEY: <%= @api_key %></h2>
    <h2>API SECRET KEY: <%= @secret_key %></h2>
    <h2>SYSTEM STATUS: <%= @system_status %></h2>
    <% if @system_status == "normal" %>
        <%= button_to 'Escape', {controller: 'escape', action: 'withdraw'}, {method: :get }%>
    <% end %>
<% end %>
